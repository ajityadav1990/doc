nmcli dev status 
nmcli con add type bridge con-name bridge1 ifname bridge1
nmcli con add type bridge-slave con-name bridge-slave1 ifname eth1 master bridge1
nmcli con add type bridge-slave con-name bridge-slave2 ifname eth2 master bridge1
nmcli con show
nmcli con mod bridge1 ipv4.addresses ipaddress ipv4.method manual
systemctl restart network
brctl show
ping -I bridge1 ipaddress
